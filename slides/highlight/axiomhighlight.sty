\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{axiomhighlight}[]%Mateusz Paprocki <mattpap@gmail.com>]

\RequirePackage{listings}
\RequirePackage{xcolor}

\definecolor{pantonexcolour}{RGB}{152,50,34}
\definecolor{pantoneycolour}{RGB}{241,209,162}

\colorlet{stringcolour}{red!60!black}
\colorlet{commentcolour}{green!50!black}
\colorlet{keywordcolour}{magenta!90!black}
\colorlet{exceptioncolour}{yellow!50!red}
\colorlet{domaincolour}{blue!60!black}
\colorlet{functioncolour}{blue!60!green}
\colorlet{literatecolour}{magenta!90!black}
\colorlet{promptcolour}{green!50!black}
\colorlet{numbercolour}{orange!90}

\newcommand{\numbercolour}{\textcolor{numbercolour}}
\newcommand{\literatecolour}{\textcolor{literatecolour}}

\lstdefinelanguage{axiom}{
    morekeywords={for,in},
    sensitive=true,
    morestring=[b]",
    morecomment=[l]++,
    morecomment=[l]--,
}

\lstdefinestyle{axiom}{
    language=axiom,
    showtabs=true,
    tab=,
    tabsize=2,
    showstringspaces=false,
    basicstyle=\ttfamily\scriptsize,
    stringstyle=\color{stringcolour},
    commentstyle=\color{commentcolour}\slshape,
    keywordstyle=\color{keywordcolour}\bfseries,
    emph={[1]true,false},
    emphstyle=[1]\color{keywordcolour},
    emph={[2]concat,groebner},
    emphstyle=[2]\color{functioncolour},
    emph={[3]Boolean,String,Symbol,DMP,INT},
    emphstyle=[3]\color{domaincolour},
    literate=*
        {0}{{\numbercolour0}}{1}
        {1}{{\numbercolour1}}{1}
        {2}{{\numbercolour2}}{1}
        {3}{{\numbercolour3}}{1}
        {4}{{\numbercolour4}}{1}
        {5}{{\numbercolour5}}{1}
        {6}{{\numbercolour6}}{1}
        {7}{{\numbercolour7}}{1}
        {8}{{\numbercolour8}}{1}
        {9}{{\numbercolour9}}{1}
        {.}{{\literatecolour.}}{1}
        {:}{{\literatecolour:}}{1}
        {=}{{\literatecolour=}}{1}
        {+}{{\literatecolour+}}{1}
        {-}{{\literatecolour-}}{1}
        {*}{{\literatecolour*}}{1}
        {/}{{\literatecolour/}}{1}
        {!}{{\literatecolour!}}{1}
        {@}{{\literatecolour{\char64}}}{1}
        {~}{{\literatecolour{\char126}}}{1}
        {<}{{\literatecolour<}}{1}
        {>}{{\literatecolour>}}{1}
        {[}{{\literatecolour[}}{1}
        {]}{{\literatecolour]}}{1},
    frame=trbl,
    rulecolor=\color{black!50},
    backgroundcolor=\color{pantoneycolour!50},
}

\lstnewenvironment{axiom}
    {\lstset{style=axiom}}{}

